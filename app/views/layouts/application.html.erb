<!DOCTYPE html>
<html>
  <head>
    <title>Concerts</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
  </head>

  <body>
    <div class='nav'>
        <h1 class="title"> Concerts! </h1>
      <% if !logged_in? %>
        <p class="login"><%= link_to "Login", new_session_path %></p>
        <p class="register"><%= link_to "Sign Up", new_user_path%></p>
        <p class="home"><%= link_to "Home", root_path%></p>
      <% end %>
    </div>

    <div id="main_content">
      <div id="header">

        <% if logged_in? %>
            <p class="logged_in">Logged In: <%= link_to current_user.first_name, current_user %></p>
        <div class="buttons">
          <%= link_to 'Logout', session_path(current_user), method: :delete, data: { confirm: 'Are you sure you want to log out?'}  %>
          <p class="home"><%= link_to "Home", root_path%></p>
        </div>
        <% end %>
      </div>
      <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
